<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181821"
    tools:context=".PartieSuivi">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="105dp"
        android:layout_height="132dp"
        android:contentDescription="@string/logo_basket_game"
        app:layout_constraintBottom_toTopOf="@+id/progressBarTempsRestantTour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_basket_game_sans_fond_reduit" />

    <TextView
        android:id="@+id/affichageNomEquipe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Équipe 1"
        android:gravity="center"
        android:textColor="#D00000"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/affichageNomEquipe2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <TextView
        android:id="@+id/affichageNomEquipe2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Équipe 2"
        android:gravity="center"
        android:textColor="#FFBE0B"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/affichageNomEquipe1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <ProgressBar
        android:id="@+id/progressBarTempsRestantTour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:indeterminateTint="#D00000"
        android:indeterminate="false"
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:max="30"
        android:progress="30"
        android:minHeight="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/affichageNomEquipe2"
        />

    <TextView
        android:id="@+id/affichageScoreEquipe1"
        android:layout_width="93dp"
        android:layout_height="109dp"
        android:layout_marginStart="90dp"
        android:contentDescription="Score Équipe 1"
        android:gravity="center"
        android:textColor="#D00000"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <TextView
        android:id="@+id/affichageScoreEquipe2"
        android:layout_width="93dp"
        android:layout_height="109dp"
        android:layout_marginEnd="90dp"
        android:contentDescription="Score Équipe 2"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#FFBE0B"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"  />


    <TextView
        android:id="@+id/affichageNumeroPanier"
        android:layout_width="496dp"
        android:layout_height="79dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:contentDescription="Numéro panier"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616" />

    <TextView
        android:id="@+id/affichageCouleurEquipe"
        android:layout_width="496dp"
        android:layout_height="79dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:contentDescription="Couleur équipe"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.757" />

    <ImageButton
        android:id="@+id/boutonConnexionModuleDetection"
        android:layout_width="125dp"
        android:layout_height="101dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_panier_basket"
        app:layout_constraintBottom_toTopOf="@+id/boutonConnexionModuleSignalisation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962"
        android:contentDescription="bouton connexion module detection" />

    <ImageButton
        android:id="@+id/boutonConnexionModuleSignalisation"
        android:layout_width="125dp"
        android:layout_height="101dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_chronometre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775"
        android:contentDescription="bouton connexion module signalisation" />

    <ImageButton
        android:id="@+id/boutonConnexionModuleEcran"
        android:layout_width="125dp"
        android:layout_height="101dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boutonConnexionModuleSignalisation"
        app:layout_constraintVertical_bias="0.226"
        android:contentDescription="bouton connexion module ecran" />

    <Button
        android:id="@+id/boutonArreterPartie"
        android:text="@string/arr_ter_partie"
        android:layout_width="203dp"
        android:layout_height="74dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>