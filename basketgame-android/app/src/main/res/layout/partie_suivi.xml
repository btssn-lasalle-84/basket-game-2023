<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181821"
    tools:context=".PartieSuivi">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="92dp"
        android:layout_height="115dp"
        android:contentDescription="@string/logo_basket_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_basket_game_sans_fond_reduit" />

    <Button
        android:id="@+id/boutonConnexionModuleDetection"
        android:layout_width="53dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toTopOf="@+id/boutonConnexionModuleSignalisation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

    <Button
        android:id="@+id/boutonConnexionModuleSignalisation"
        android:layout_width="53dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782" />

    <Button
        android:id="@+id/boutonConnexionModuleEcran"
        android:layout_width="53dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boutonConnexionModuleSignalisation"
        app:layout_constraintVertical_bias="0.16" />

    <ImageView
        android:id="@+id/imagePanierBasket"
        android:layout_width="54dp"
        android:layout_height="78dp"
        android:layout_marginTop="668dp"
        android:contentDescription="@string/image_panier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_panier_basket" />

    <ImageView
        android:id="@+id/imageChronometre"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginTop="760dp"
        android:contentDescription="@string/image_chronom_tre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_chronometre" />

    <ImageView
        android:id="@+id/imageTV"
        android:layout_width="52dp"
        android:layout_height="53dp"
        android:layout_marginTop="840dp"
        android:contentDescription="@string/image_t_l_vision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_tv" />

    <TextView
        android:id="@+id/partieSuivi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/basket_game_suivi_partie"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/affichageNomEquipe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Équipe 2"
        android:gravity="center"
        android:textColor="#D00000"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/affichageNomEquipe2"
        app:layout_constraintTop_toBottomOf="@+id/partieSuivi" />

    <TextView
        android:id="@+id/affichageNomEquipe2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Équipe 2"
        android:gravity="center"
        android:textColor="#FFBE0B"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/affichageNomEquipe1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partieSuivi" />

    <ProgressBar
        android:id="@+id/progressBarTempsRestantTour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:indeterminateTint="#D00000"
        android:indeterminate="false"
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:max="30"
        android:progress="30"
        android:minHeight="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/affichageNomEquipe2"
        />

    <Button
        android:id="@+id/boutonArreterPartie"
        android:text="@string/arr_ter_partie"
        android:layout_width="203dp"
        android:layout_height="74dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>